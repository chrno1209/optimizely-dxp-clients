    "@remkoj/optimizely-cms-api": "^4.0.0-rc1",
    "@types/node": "*"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
