{
  "name": "@remkoj/optimizely-cms-cli",
  "description": "Optimizely CMS CLI Tools",
  "type": "module",
  "version": "4.0.0-rc1",
  "bin": {
    "opti-cms": "./dist/index.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
