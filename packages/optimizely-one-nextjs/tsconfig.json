{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": ["./dist/**"],
}